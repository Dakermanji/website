<!-- views/index.ejs -->

<!-- Hero Section -->
<div class="background-overlay"></div>
<section class="hero-section">
  <div class="hero-content">
    <small class="role">Full Stack <span class='orange'>W</span>eb <span class='orange'>D</span>eveloper</small>
    <h1>Hi, I'm Behnam <span class='orange'>D</span>akermanji from Canada <img src="/images/index/canada-flag.png" alt="Canada Flag" class="flag-icon"></h1>
  </div>
</section>

<!-- About Section -->
<section id="about">
  <div class="container">
    <h2 class="sub-title"><%= about.title %></h2>
    <div class="row">
      <!-- About Image Column -->
      <div class="about-col-1 text-center">
        <img src="<%= about.image %>" alt="Humanoid robot working on PC" />
      </div>

      <!-- About Content Column with Background -->
      <div class="about-col-2 about-background">
        <% about.description.forEach(paragraph => { %>
        <p><%= paragraph %></p>
        <% }) %>

        <!-- Tab Titles -->
        <div class="tab-titles">
          <% Object.keys(about.tabs).forEach(tab => { %>
          <p class="tab-links <%= tab === 'experience' ? 'active' : '' %>" data-tab="<%= tab %>"><%= tab.charAt(0).toUpperCase() + tab.slice(1) %></p>
          <% }) %>
        </div>

        <!-- Tab Contents -->
        <% Object.entries(about.tabs).forEach(([tab, contents]) => { %>
        <div id="<%= tab %>" class="tab-contents <%= tab === 'experience' ? 'active-tab' : '' %>">
          <% if (tab === 'experience') { %>
          <ul>
            <% contents.forEach(item => { %>
            <li>
              <span><%= item.period %></span><br />
              <%= item.role %> for "<strong><em><%= item.company || '' %></em></strong>"<br />
              <address><%= item.location || '' %></address>
            </li>
            <% }) %>
          </ul>
          <% } else if (tab === 'skills') { %>
          <ul>
            <% contents.forEach(skill => { %>
            <li>
              <span><%= skill.name %></span><br />
              <%= skill.description %>
            </li>
            <% }) %>
          </ul>
          <% } else if (tab === 'education') { %>
          <ul>
            <% contents.forEach(edu => { %>
            <li>
              <span><%= edu.year %></span><br />
              <%= edu.title %><br />
              <address><%= edu.institution %></address>
            </li>
            <% }) %>
          </ul>
          <% } %>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</section>
