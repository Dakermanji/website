<!-- views/index.ejs -->

<!-- Display Flash Messages -->
<% if (success_msg && success_msg.length > 0) { %>
<div id='flash-message' class="flash-message alert alert-success alert-dismissible fade show text-center" role="alert">
  <%= success_msg %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } else if (error_msg && error_msg.length > 0) { %>
<div id='flash-message' class="flash-message alert alert-danger alert-dismissible fade show text-center" role="alert">
  <%= error_msg %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<!-- Overlay -->
<div class="background-overlay"></div>


<!-- Hero Section -->
<section class="hero-section">
  <div class="hero-content">
    <small class="role">Full Stack <span class='orange'>W</span>eb <span class='orange'>D</span>eveloper</small>
    <h1>Hi, I'm Behnam <span class='orange'>D</span>akermanji from Canada <img src="/images/index/canada-flag.png" alt="Canada Flag" class="flag-icon" loading='lazy'></h1>
  </div>
</section>

<!-- About Section -->
<section id="about">
  <div class="container">
    <h2 class="sub-title"><%= about.title %></h2>
    <div class="row">
      <!-- About Image Column -->
      <div class="about-col-1 text-center">
        <img src="<%= about.image %>" alt="Humanoid robot working on PC" loading='lazy' />
      </div>

      <!-- About Content Column with Background -->
      <div class="about-col-2 about-background">
        <% about.description.forEach(paragraph => { %>
        <p><%= paragraph %></p>
        <% }) %>

        <!-- Tab Titles -->
        <div class="tab-titles" role="tablist">
          <% Object.keys(about.tabs).forEach(tab => { %>
          <p class="tab-links <%= tab === 'experience' ? 'active' : '' %>" data-tab="<%= tab %>" role="tab" aria-selected="<%= tab === 'experience' ? 'true' : 'false' %>"><%= tab.charAt(0).toUpperCase() + tab.slice(1) %></p>
          <% }) %>
        </div>

        <!-- Tab Contents -->
        <% Object.entries(about.tabs).forEach(([tab, contents]) => { %>
        <div id="<%= tab %>" class="tab-contents <%= tab === 'experience' ? 'active-tab' : '' %>">
          <% if (tab === 'experience') { %>
          <ul>
            <% contents.forEach(item => { %>
            <li>
              <span><%= item.period %></span><br />
              <%= item.role %> for "<strong><em><%= item.company || '' %></em></strong>"<br />
              <address><%= item.location || '' %></address>
            </li>
            <% }) %>
          </ul>
          <% } else if (tab === 'skills') { %>
          <ul>
            <% contents.forEach(skill => { %>
            <li>
              <span><%= skill.name %></span><br />
              <%= skill.description %>
            </li>
            <% }) %>
          </ul>
          <% } else if (tab === 'education') { %>
          <ul>
            <% contents.forEach(edu => { %>
            <li>
              <span><%= edu.year %></span><br />
              <%= edu.title %><br />
              <address><%= edu.institution %></address>
            </li>
            <% }) %>
          </ul>
          <% } %>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</section>

<!-- Services Section -->
<section id="services">
  <div class="container">
    <h2 class="text-center mb-5"><%= services.title %></h2>
    <div class="row">
      <% services.services.forEach(service => { %>
      <div class="service-card col-md-4 mb-4">
        <div class="card shadow-sm text-center">
          <div class="card-body">
            <i class="bi <%= service.icon %> display-4 mb-5"></i>
            <h3 class="card-title"><%= service.title %></h3>
            <p class="card-text"><%= service.description %></p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>

<!-- My Work / Portfolio Section -->
<section id="portfolio">
  <div class="container">
    <h2 class="text-center mb-5">My Work</h2>
    <div class="work-list">
      <% projects.forEach(project => { %>
      <div class="work text-center">
        <a href="/<%= project.link %>">
          <h4 class='mb-4 mt-3'><%= project.title %></h4>
          <img src="/images/index/<%= project.img %>" alt="<%= project.title %>" loading="lazy">
        </a>
      </div>
      <% }) %>
    </div>
  </div>
  <div class="text-center mt-4">
    <button id="see-more-btn" class="btn" aria-label="See More Projects">See More</button>
  </div>
  </div>
</section>

<!-- Contact Me Section -->
<section id="contact" class="py-5">
  <div class="container">
    <h2 class="mb-5">Contact Me</h2>
    <div class="row justify-content-center">
      <div class="col-md-6">

        <!-- Contatct Form -->
        <form action="/send-message" method="POST" class="needs-validation" novalidate>
          <div class="form-group mb-3">
            <label for="name">Your Name</label>
            <input type="text" id="name" name="name" class="form-control" maxlength="100" required>
          </div>
          <div class="form-group mb-3">
            <label for="email">Your Email</label>
            <input type="email" id="email" name="email" class="form-control" maxlength="100" required>
          </div>
          <div class="form-group mb-3">
            <label for="message">Your Message</label>
            <textarea id="message" name="message" class="form-control" maxlength="1000" rows="5" required></textarea>
          </div>
          <div class='text-center'>
            <button type="submit" class="btn btn-primary">Send Message</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Social Media -->
    <div class="text-center mt-4">
      <p>You can also reach me at <a target='_blank' href="mailto:dakermanji@gmail.com">dakermanji@gmail.com</a></p>
      <div class="social-icons">
        <a href="https://facebook.com/yourprofile" target="_blank" rel="noopener noreferrer" aria-label="Facebook" data-bs-toggle="tooltip" title="Facebook"><i class=" bi bi-facebook"></i></a>
        <a href="https://facebook.com/yourprofile" aria-label="Facebook Messenger" target="_blank" rel="noopener noreferrer" data-bs-toggle="tooltip" title="Facebook Messenger"><i class="bi bi-messenger"></i></a>
        <a href="https://twitter.com/yourprofile" target="_blank" rel="noopener noreferrer" aria-label="X" data-bs-toggle="tooltip" title="X/Twitter"><i class="bi bi-twitter-x"></i></a>
        <a href="https://linkedin.com/in/yourprofile" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" data-bs-toggle="tooltip" title="LinkedIn"><i class="bi bi-linkedin"></i></a>
        <a href="https://github.com/yourprofile" target="_blank" rel="noopener noreferrer" aria-label="GitHub" data-bs-toggle="tooltip" title="GitHub"><i class="bi bi-github"></i></a>
        <a href="https://github.com/yourprofile" target="_blank" rel="noopener noreferrer" aria-label="WhatsApp" data-bs-toggle="tooltip" title="WhatsApp"><i class="bi bi-whatsapp"></i></a>
      </div>
    </div>
  </div>
</section>

