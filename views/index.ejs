<!-- views/index.ejs -->

<div class="background-overlay"></div>

<!-- Hero Section -->
<section class="hero-section">
  <div class="hero-content">
    <small class="role">Full Stack <span class='orange'>W</span>eb <span class='orange'>D</span>eveloper</small>
    <h1>Hi, I'm Behnam <span class='orange'>D</span>akermanji from Canada <img src="/images/index/canada-flag.png" alt="Canada Flag" class="flag-icon"></h1>
  </div>
</section>

<!-- About Section -->
<section id="about">
  <div class="container">
    <h2 class="sub-title"><%= about.title %></h2>
    <div class="row">
      <!-- About Image Column -->
      <div class="about-col-1 text-center">
        <img src="<%= about.image %>" alt="Humanoid robot working on PC" />
      </div>

      <!-- About Content Column with Background -->
      <div class="about-col-2 about-background">
        <% about.description.forEach(paragraph => { %>
        <p><%= paragraph %></p>
        <% }) %>

        <!-- Tab Titles -->
        <div class="tab-titles">
          <% Object.keys(about.tabs).forEach(tab => { %>
          <p class="tab-links <%= tab === 'experience' ? 'active' : '' %>" data-tab="<%= tab %>"><%= tab.charAt(0).toUpperCase() + tab.slice(1) %></p>
          <% }) %>
        </div>

        <!-- Tab Contents -->
        <% Object.entries(about.tabs).forEach(([tab, contents]) => { %>
        <div id="<%= tab %>" class="tab-contents <%= tab === 'experience' ? 'active-tab' : '' %>">
          <% if (tab === 'experience') { %>
          <ul>
            <% contents.forEach(item => { %>
            <li>
              <span><%= item.period %></span><br />
              <%= item.role %> for "<strong><em><%= item.company || '' %></em></strong>"<br />
              <address><%= item.location || '' %></address>
            </li>
            <% }) %>
          </ul>
          <% } else if (tab === 'skills') { %>
          <ul>
            <% contents.forEach(skill => { %>
            <li>
              <span><%= skill.name %></span><br />
              <%= skill.description %>
            </li>
            <% }) %>
          </ul>
          <% } else if (tab === 'education') { %>
          <ul>
            <% contents.forEach(edu => { %>
            <li>
              <span><%= edu.year %></span><br />
              <%= edu.title %><br />
              <address><%= edu.institution %></address>
            </li>
            <% }) %>
          </ul>
          <% } %>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</section>

<!-- Services Section -->
<section id="services">
  <div class="container">
    <h2 class="text-center mb-5"><%= services.title %></h2>
    <div class="row">
      <% services.services.forEach(service => { %>
      <div class="service-card col-md-4 mb-4">
        <div class="card shadow-sm text-center">
          <div class="card-body">
            <i class="bi <%= service.icon %> display-4 mb-5"></i>
            <h3 class="card-title"><%= service.title %></h3>
            <p class="card-text"><%= service.description %></p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>

<!-- My Work Section -->
<section id="portfolio">
  <div class="container">
    <h2 class="text-center mb-5">My Work</h2>
    <div class="work-list">
      <% projects.forEach(project => { %>
      <div class="work text-center">
        <a href="/<%= project.link %>">
          <h4 class='mb-4 mt-3'><%= project.title %></h4>
          <img src="/images/index/<%= project.img %>" alt="<%= project.title %>">
        </a>
      </div>
      <% }) %>
    </div>
  </div>
  <div class="text-center mt-4">
    <button id="see-more-btn" class="btn btn-primary">See More</button>
  </div>
  </div>
</section>
