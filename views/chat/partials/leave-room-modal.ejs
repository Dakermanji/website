<!-- views/chat/partials/leave-room-modal.ejs -->

<div id="leave-modal" class="modal d-none" tabindex="-1">
	<div class="modal-content text-center">
		<h5 class="mb-3">Leave Room?</h5>
		<p class="text-muted mb-3">
			Are you sure you want to leave <strong><%= room.name %></strong>?
		</p>

		<form method="POST" action="/chat/rooms/<%= room.id %>/leave">
			<button type="submit" class="btn btn-danger w-100 mb-2">
				Yes, Leave
			</button>
		</form>

		<button type="button" class="btn btn-secondary w-100 close-modal">
			Cancel
		</button>
	</div>
</div>
