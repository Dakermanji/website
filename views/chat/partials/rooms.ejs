<!-- views/chat/partials/rooms.ejs -->

<div class="d-flex justify-content-center align-items-center gap-2">
	<h2 class="orange m-0"><%= room.name %></h2>
	<% if (room.creator_id === user.id) { %>
	<button
		type="button"
		class="btn btn-sm btn-outline-danger"
		id="open-delete-modal"
		>DELETE</button
	>
	<% } else { %>
	<button
		type="button"
		class="btn btn-sm btn-outline-danger"
		id="open-leave-modal"
	>
		Leave
	</button>
	<% } %>
</div>
<p class="text-muted text-center mb-3">Created by: <%= room.username %></p>

<div id="messages" class="messages"></div>

<form id="messageForm">
	<input
		type="text"
		id="messageInput"
		placeholder="Type your message..."
		autocomplete="off"
	/>
	<button type="submit">
		<i class="bi bi-send-fill"></i>
	</button>
</form>
