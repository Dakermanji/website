<!-- views/chat/partials/friends.ejs -->

<h2 class="text-center"
	>Chat with: <strong class="orange"><%= friend.username %></strong></h2
>
<div id="messages" class="messages"></div>

<form id="messageForm">
	<input
		type="text"
		id="messageInput"
		placeholder="Type your message..."
		autocomplete="off"
	/>
	<button type="submit">
		<i class="bi bi-send-fill"></i>
	</button>
</form>
