<!-- views/chat/partials/kick-room-member-modal.ejs -->

<div id="kick-modal" class="modal d-none">
	<div class="modal-content text-center">
		<h5 class="mb-3">Manage Member</h5>
		<p class="text-muted mb-3">
			You are managing <strong id="kick-username">...</strong>
		</p>

		<!-- Remove Form -->
		<form
			method="POST"
			action="/chat/rooms/<%= room.id %>/members/remove"
			class="mb-2"
		>
			<input type="hidden" name="user_id" id="kick-user-id" />
			<button type="submit" class="btn btn-danger w-100"
				>Remove from Room</button
			>
		</form>

		<!-- Block/Unblock Form -->
		<form
			method="POST"
			action="/chat/rooms/<%= room.id %>/members/block"
			class="mb-3"
		>
			<input type="hidden" name="user_id" id="block-user-id" />
			<input type="hidden" name="block" id="block-action" />
			<button type="submit" id="block-btn" class="btn w-100"></button>
		</form>

		<button type="button" class="btn btn-secondary w-100 close-modal"
			>Cancel</button
		>
	</div>
</div>
