<!-- views/weather.ejs -->

<div class="container my-5">
	<h1 class="text-center mb-4">Weather Forecast</h1>

	<form id="weatherForm" class="mb-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="form-group mb-3">
					<label for="city" class="form-label">City Name:</label>
					<input
						type="text"
						id="city"
						name="city"
						class="form-control"
						placeholder="Enter city name"
						autocomplete="off"
						required
					/>
					<div id="suggestions" class="list-group mt-2"></div>
				</div>

				<div class="form-group mb-3">
					<label class="me-2">Unit:</label>
					<div class="form-check form-check-inline">
						<input
							class="form-check-input"
							type="radio"
							name="unit"
							value="metric"
							id="metric"
							checked
						/>
						<label class="form-check-label" for="metric"
							>Metric (°C)</label
						>
					</div>
					<div class="form-check form-check-inline">
						<input
							class="form-check-input"
							type="radio"
							name="unit"
							value="imperial"
							id="imperial"
						/>
						<label class="form-check-label" for="imperial"
							>Imperial (°F)</label
						>
					</div>
				</div>

				<div class="text-center">
					<button type="submit" class="btn btn-primary"
						>Get Weather</button
					>
				</div>
			</div>
		</div>
	</form>

	<!-- Weather Results -->
	<div id="weatherDisplay" class="row justify-content-center">
		<!-- Cards will be appended here dynamically -->
	</div>
</div>
