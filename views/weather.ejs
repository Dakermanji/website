<!-- views/weather.ejs -->

<!-- Background image (will be styled in CSS) -->
<div class="weather-background"></div>

<!-- Main Weather Card -->
<div class="weather-container d-flex justify-content-center align-items-center">
	<div class="weather-card p-4 rounded shadow-lg">
		<!-- Search + Unit Toggle -->
		<form id="weatherForm" class="mb-4">
			<div class="row g-3">
				<div class="col-12">
					<input
						type="text"
						id="city"
						name="city"
						class="form-control"
						placeholder="Enter city name"
						autocomplete="off"
						required
					/>
					<div id="suggestions" class="list-group mt-2"></div>
				</div>

				<div class="col-12">
					<div class="unit-toggle d-flex gap-2">
						<input
							type="radio"
							name="unit"
							id="metric"
							value="metric"
							autocomplete="off"
							checked
							hidden
						/>
						<label for="metric" class="btn btn-primary">°C</label>

						<input
							type="radio"
							name="unit"
							id="imperial"
							value="imperial"
							autocomplete="off"
							hidden
						/>
						<label for="imperial" class="btn btn-outline-primary"
							>°F</label
						>
					</div>
				</div>
			</div>
		</form>

		<!-- Weather Results -->
		<div id="weatherResults" class="mt-4" hidden>
			<h5 id="selectedCity" class="text-center mb-3"></h5>
			<!-- Days Selector -->
			<div class="row text-center mb-4" id="daySelector">
				<!-- Days will be dynamically inserted here -->
			</div>

			<!-- Selected Day Details -->
			<div id="selectedDay" class="text-center">
				<h3 id="selectedDayDate">Date</h3>
				<div class="weather-icon my-3">
					<img id="selectedDayIcon" src="" alt="" />
				</div>
				<p id="selectedDayDescription" class="lead">Description</p>
				<p id="selectedDayTemp" class="fw-bold">Min - Max</p>
				<p id="selectedDayLocalTime" class="text-muted"
					>Local time: --:--</p
				>
			</div>
		</div>
	</div>
</div>
<div
	id="loading"
	class="loading-overlay justify-content-center align-items-center"
	hidden
>
	<div class="spinner-border" role="status">
		<span class="visually-hidden">Loading...</span>
	</div>
</div>
