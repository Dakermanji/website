<!-- views/partials/forgot_resend.ejs -->

<div id="authUtilityModal" class="auth-modal">
	<div class="auth-modal-content small">
		<button
			class="auth-modal-close"
			id="closeUtilityModal"
			aria-label="Close"
		>
			<i class="bi bi-x-square"></i>
		</button>
		<div class="auth-modal-header">
			<h2 class="auth-modal-title">Account Assistance</h2>
		</div>
		<div class="auth-modal-body">
			<form id="utilityForm" action="#" method="POST" novalidate>
				<div class="mb-3">
					<label for="utility-email" class="form-label">
						Email Address
					</label>
					<input
						type="email"
						id="utility-email"
						class="form-control"
						name="email"
						placeholder="Enter your email"
						autocomplete="email"
						required
					/>
				</div>
				<div class="d-grid gap-2">
					<button
						type="submit"
						formaction="/auth/reset-password"
						class="btn btn-primary w-100"
					>
						Reset Password
					</button>
					<button
						type="submit"
						formaction="/auth/resend-confirmation"
						class="btn btn-secondary w-100"
					>
						Resend Confirmation Email
					</button>
				</div>
			</form>
		</div>
	</div>
</div>
