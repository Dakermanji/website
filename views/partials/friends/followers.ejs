<!-- views/partials/friends/followers.ejs -->

<% if (followers.length > 0) { %> <% followers.forEach(follower => { %>
<li class="dropdown-item d-flex flex-column gap-2">
	<div>
		<strong><%= follower.username %></strong>
		(<%= follower.email %>)
	</div>
	<div class="follow-buttons d-flex gap-2">
		<% if (follower.mutual_follow) { %>
		<button
			class="btn btn-sm btn-warning"
			data-bs-toggle="tooltip"
			title="Unfollow Both"
		>
			<i class="bi bi-person-x-fill"></i>
		</button>
		<% } else { %>
		<button
			class="btn btn-sm btn-danger"
			data-bs-toggle="tooltip"
			title="Remove"
		>
			<i class="bi bi-person-dash-fill"></i>
		</button>
		<% } %>
		<button
			class="btn btn-sm btn-dark"
			data-bs-toggle="tooltip"
			title="Block"
		>
			<i class="bi bi-ban"></i>
		</button>
	</div>
</li>
<% }); %> <% } else { %>
<li class="dropdown-item text-center">No followers</li>
<% } %>
