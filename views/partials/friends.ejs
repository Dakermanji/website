<!-- views/partials/friends.ejs -->

<div id="friends-modal" class="friends-modal mt-3">
	<div class="friends-content">
		<h2>Friends</h2>
		<h4>Follow Request</h4>
		<div class="add-friend d-flex align-items-center gap-2 mb-3">
			<input
				type="email"
				id="friend-email"
				class="form-control"
				placeholder="Enter email"
			/>
			<button id="add-friend-btn" class="btn d-flex align-items-center">
				<i class="bi bi-plus-lg"></i>
			</button>
		</div>
		<!-- Display follow request message (success or error) -->
		<div id="follow-message" class="mt-3" aria-live="polite"></div>
		<div class="friends-list">
			<div class="dropdown">
				<h4
					class="btn-secondary dropdown-toggle"
					id="notificationsDropdown"
					data-bs-toggle="dropdown"
					aria-expanded="false"
				>
					Notifications
				</h4>
				<ul
					class="dropdown-menu"
					aria-labelledby="notificationsDropdown"
					id="notifications-list"
				>
					<!-- Notifications Dropdown -->
					<%- include('friends/notifications') %>
				</ul>
			</div>
			<!-- Follows Dropdown -->
			<div class="dropdown">
				<h4
					class="btn-secondary dropdown-toggle"
					id="followsDropdown"
					data-bs-toggle="dropdown"
					aria-expanded="false"
				>
					Following
				</h4>
				<ul
					class="dropdown-menu"
					aria-labelledby="followsDropdown"
					id="follows-list"
				>
					<!-- Notifications Dropdown -->
					<%- include('friends/follows') %>
				</ul>
			</div>

			<h4>Followers</h4>
			<h4>Follows</h4>
			<h4>Blocked</h4>
		</div>
	</div>
</div>
