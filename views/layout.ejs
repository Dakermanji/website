<!-- views/layout.ejs -->

<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicons/favicon-16x16.png">
    <link rel="manifest" href="/images/favicons/site.webmanifest">
    <link rel="shortcut icon" href="/images/favicons/favicon.ico">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

    <!-- Static Styles and Scripts -->
    <link rel="stylesheet" href="/css/root.css">
    <link rel="stylesheet" href="/css/header_footer.css">
    <script src="/js/navbar.js" defer></script>

    <!-- Dynamic Styles -->
    <% const stylesArray = typeof styles !== 'undefined' ? styles : []; %>
    <% stylesArray.forEach(style => { %>
    <link rel="stylesheet" href="/css/<%= style %>.css">
    <% }) %>

    <!-- Dynamic Scripts -->
    <% const scriptsArray = typeof scripts !== 'undefined' ? scripts : []; %>
    <% scriptsArray.forEach(script => { %>
    <script src="/js/<%= script %>.js" defer></script>
    <% }) %>
  </head>


  <body>

    <!-- Header -->
    <%- include('partials/header') %>

    <!-- Main Content -->
    <main class="container">
      <%- body %>
      <!-- This is where content from other views will appear -->
    </main>

    <!-- Footer -->
    <%- include('partials/footer') %>
  </body>

</html>
